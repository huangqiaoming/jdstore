<!-- Container (Contact Section) -->
<div id="contact" class="container-fluid bg-grey">
    <div class="contact-form">
      <h2 class="text-center">CONTACT US</h2>
       
        <div class="col-sm-5">
          <p>Contact us and we'll get back to you within 24 hours.</p>
          <p><span class="glyphicon glyphicon-map-marker"></span> GuangZhou, China</p>
          <p><span class="glyphicon glyphicon-phone"></span> +8620 15802010183</p>
          <p><span class="glyphicon glyphicon-envelope"></span> johnsonlee@126.com</p>
        </div>
        <div class="col-sm-7 slideanim ">
          <%= simple_form_for @contact do |f| %>
          <div class="row">
            <div class="col-sm-6 form-group">
              <%= f.input :name %>
              <!-- <input class="form-control" id="name" name="name" placeholder="Name" type="text" required> -->
            </div>
                <div class="col-sm-6 form-group">
              <%= f.input :email %>
              <!-- <input class="form-control" id="email" name="email" placeholder="Email" type="email" required> -->
            </div>
          </div>
          <%= f.input :comments %>
          <!-- <textarea class="form-control" id="comments" name="comments" placeholder="Comment" rows="5"></textarea><br> -->
          <div class="row">
            <div class="col-sm-12 form-group">
              <button class="btn btn-default pull-left" type="submit">Send</button>
          </div>
          <% end %>
        </div>
       </div>

    </div>
  </div>
